FROM python:3.10-slim

LABEL maintainer="Cicero Reis"

ARG user=creis

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PATH=/home/$user/.local/bin:$PATH

WORKDIR /application

# Dependências do sistema (científico + build)
RUN apt-get update && apt-get install -y \
    build-essential \
    gcc \
    g++ \
    curl \
    libffi-dev \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Atualiza pip
RUN pip install --upgrade pip setuptools wheel

# Copia dependências
COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

# Cria usuário não-root
RUN useradd -m $user && \
    chown -R $user:$user /application

USER $user

# Copia aplicação
COPY . .

# Portas (FastAPI + Streamlit)
EXPOSE 8000
EXPOSE 8501

# CMD neutro (será sobrescrito no docker-compose)
CMD ["python", "-c", "print('Use docker-compose para definir o serviço')"]
